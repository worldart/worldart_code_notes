        <div class="controls">
            <button id="resetBtn">Reset to Equilibrium</button>
            <button id="shiftSupplyBtn">Shift Supply</button>
            <button id="shiftDemandBtn">Shift Demand</button>
        </div>
    </div>

    <script>
        document.getElementById('resetBtn').addEventListener('click', function() {
            // Reset to initial state
            document.querySelector('.supply-line').style.transform = 'rotate(45deg)';
            document.querySelector('.demand-line').style.transform = 'rotate(-45deg)';
            
            // Reset points
            document.querySelector('.equilibrium').style.bottom = '200px';
            document.querySelector('.equilibrium').style.left = '200px';
            
            document.querySelector('.point:not(.equilibrium)').style.bottom = '150px';
            document.querySelector('.point:not(.equilibrium)').style.left = '250px';
        });

        document.getElementById('shiftSupplyBtn').addEventListener('click', function() {
            // Shift supply line
            const supplyLine = document.querySelector('.supply-line');
            const currentTransform = supplyLine.style.transform;
            const currentAngle = parseInt(currentTransform.match(/rotate\(([-]?\d+)deg\)/)[1]);
            supplyLine.style.transform = `rotate(${currentAngle + 10}deg)`;
        });

        document.getElementById('shiftDemandBtn').addEventListener('click', function() {
            // Shift demand line
            const demandLine = document.querySelector('.demand-line');
            const currentTransform = demandLine.style.transform;
            const currentAngle = parseInt(currentTransform.match(/rotate\(([-]?\d+)deg\)/)[1]);
            demandLine.style.transform = `rotate(${currentAngle - 10}deg)`;
        });
    </script>
